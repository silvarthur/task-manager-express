<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css'/>
  </head>
  <body>
    <div class='container'>
      <h1 id='main-header'>Welcome to <%= title %></h1>

      <form method='POST', action="/">

        <input id='title' type='text' class='form-control' name='title' placeholder='Title' >

        <input id='description' type='text' class='form-control' name='description' placeholder='Description'>

        <button id='submit-button' type='submit'class='btn btn-primary'>Add New Task</button>
      </form>

      <!--
      <table id='tasks-list' class='table table-striped table-bordered'>
        <tr>
          <th>Title</th>
          <th>Description</th>
        </tr>      
        <% for(var i=0; i < tasks.length; i++) { %>
          <tr>
            <td><%= tasks[i].title %></td>
            <td><%= tasks[i].description %></td>
          </tr>
        <% } %>
      </table>
      -->

      <% for(var i=0; i < tasks.length; i++) { %>
        <div class="container">
          <div class="jumbotron">
              <h3><%= tasks[i].title %></h1>
              <p><%= tasks[i].description %></p>

              <button class="btn btn-primary">Mark as Done</button>
              <!-- Using JavaScript to access a link. -->
              <button class="btn btn-primary" onclick="goToTaskDetailsPage('<%= tasks[i]._id %>')">Edit</button>
          </div>
        </div>
      <% } %>

    <script src='bower_components/jquery/dist/jquery.js'></script>
    <script src='bower_components/bootstrap/dist/js/bootstrap.js'></script>
    <script>
      function goToTaskDetailsPage(id) {
        window.location='/' + id;
      }
    </script>
  </body>
</html>
